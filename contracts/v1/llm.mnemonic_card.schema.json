{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MnemonicCardResponse",
  "type": "object",
  "required": ["version", "cards"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "cards": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "title",
          "imageDescription",
          "story",
          "anchors",
          "toneProfile",
          "strengthTags"
        ],
        "properties": {
          "title": { "type": "string", "minLength": 1 },
          "imageDescription": { "type": "string", "minLength": 1 },
          "story": { "type": "string", "minLength": 1 },
          "anchors": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["token", "value"],
              "properties": {
                "token": {
                  "type": "string",
                  "enum": ["from", "to", "piece", "fx", "plan"]
                },
                "value": { "type": "string", "minLength": 1 }
              },
              "additionalProperties": false
            }
          },
          "toneProfile": {
            "type": "string",
            "enum": [
              "family_friendly",
              "absurd",
              "cinematic",
              "mature_nongraphic"
            ]
          },
          "strengthTags": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["action", "sensory", "surprise", "clarity"]
            }
          },
          "coaching": {
            "type": "object",
            "required": ["keyIdea", "howToRehearse"],
            "properties": {
              "keyIdea": { "type": "string" },
              "howToRehearse": { "type": "string" },
              "commonConfusions": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
